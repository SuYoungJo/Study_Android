<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#eae4e4"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnSoju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="소주"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnMakuly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="막걸리"
            android:background="#d7c590"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnBeer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="맥주"
            android:background="@android:color/holo_orange_light"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnWhiskey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="위스키"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnVodka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="보드카"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnWine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="와인"
            android:background="@android:color/holo_purple"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="4"
        android:background="#eae4e4"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/iBtnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/home"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/iBtnCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/cart"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/iBtnBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/bill"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/iBtnCal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/cal"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

</LinearLayout>